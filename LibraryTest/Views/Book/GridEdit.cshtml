@model LibraryTest.Models.BooksModel


<h2>Edit</h2>

@using (Ajax.BeginForm("UpdateBooks", "Book", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "result" }))
{

    <div class="form-group">
        <label for="exampleInputEmail1">Title(Enter the title @ViewBag.Model.Title)</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    </div>

    <div class="form-group">
            <label for="exampleInputPassword1">Quantity</label>
            @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control" })
        </div>

    <button type="submit" class="btn btn-default">Submit</button>
}

<div id="result"></div>
